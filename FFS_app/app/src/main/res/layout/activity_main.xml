<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f68c06"
    tools:context="com.example.ilhamrahman.ffs_app.MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="229dp"
        android:layout_height="56dp"
        android:text="Flareon Fire System"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="284dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_bias="0.703" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="305dp"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Press This Button To See the Status of the Fire:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="306dp"
        android:layout_height="21dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="179dp"
        android:text="Press This Button To See the Status of Smoke:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="231dp"
        android:text="Press This Button To See the Current Temperature in Your Home:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/fireButton"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:text="Fire"
        android:onClick="sendMessage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="369dp"
        android:layout_marginLeft="312dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/smokeButton"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:text="Smoke"
        android:layout_marginLeft="314dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="418dp" />

    <Button
        android:id="@+id/tempButton"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Temperature"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="271dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="272dp"
        android:layout_height="223dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
